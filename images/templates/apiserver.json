{
    "variables": {
        "project_root": "../.."
    },
    "builders": [{
        "type": "digitalocean",
        "image": "ubuntu-18-04-x64",
        "region": "nyc1",
        "size": "s-1vcpu-1gb",
        "droplet_name": "tmp-build-api-image",
        "ssh_username": "root"
    }],
    "provisioners": [{
        "type": "ansible",
        "playbook_file": "{{ user `project_root` }}/config-management/site.yml",
        "extra_arguments": [
            "--tags",
            "packer"
        ],
        "groups": [
            "apiservers"
        ]
    }]
}
